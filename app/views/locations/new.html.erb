<h1>Where will your project be located?</h1>

<div class="container">
  <%= form_for @location do |f| %>

    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.submit "Continue to Project" %>
  <% end %>
</div>
