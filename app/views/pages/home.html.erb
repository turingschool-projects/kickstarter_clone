<div class="carousel carousel-slider">
  <a class="carousel-item" href="#one!"><img src="assets/images/placeholder_1.jpg"></a>
  <a class="carousel-item" href="#one!"><img src="assets/images/placeholder_2.jpg"></a>
</div>

<div class="header-container">
  <div class="video-container">
    <video preload = "true" autoplay = "autoplay" loop = "loop"
    volume = "0" poster = "pic.jpg">
    <source src="https://d3mlfyygrfdi2i.cloudfront.net/Halsey_15sec_06282017_%283%29.mp4" type="video/mp4" >
    </video>
    <div class="text-wrapper">
      <h1>Jump in. Get moving. Do the thing you<br /> need to do for the world.</h1>
    </div>
  </div>
</div>

<div class="container row">
  <div class="card medium col s4">
   <h5>Most funded</h5>
   <%if @most_funded %>
    <div class="card-image waves-effect waves-block waves-light style="max-height: 160px;">
      <%= image_tag @most_funded.image_url, class: "activator responsive-img" %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4" style="line-height: 25px;"><%= link_to @most_funded.title, project_path(@most_funded) %><i class="material-icons right">more_vert</i></span>
      <div class="progress">
        <div class="determinate" style="width: <%= @most_funded.percentage_pledged %>%"></div>
      </div>
      <div class="project-stats">
        <p><strong>$<%= number_with_delimiter(@most_funded.total_pledged, :delimiter => ',') %></strong> pledged</p>
        <p><strong><%= @most_funded.percentage_pledged.round(0) %>%</strong> funded</p>
        <p><strong><%= @most_funded.days_remaining %></strong> days to go</p>
        <p><strong><%= @most_funded.project_backers.count %></strong> backers</p>
      </div>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%= @most_funded.title %><i class="material-icons right">close</i></span>
      <%= @most_funded.description %>
    </div>
    <%end%>
  </div>
  <div class="card medium col s4">
    <h5>Nearly Funded</h5>
  </div>
</div>
<%= render 'helpers/project_card' %>
