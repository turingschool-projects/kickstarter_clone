<h1>Tell Us About Your Project</h1>
<div class="container">
  <%= form_for @project do |f| %>

    <%= f.hidden_field :location_id, { :value => params[:location_id] } %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :image_url%>
    <%= f.text_field :image_url%>

    <%= f.label :target_amount%>
    <%= f.text_field :target_amount%>

    <%= f.label :category %>
    <%= f.collection_select :category_id,
    @categories.order(:name),
    :id,
    :name,
    include_blank: true %><br>

    <%= f.label :completion_date%>
    <%= f.date_select :completion_date,
                      class: "datepicker",
                      selected: 30.days.from_now  %>

    <%= f.submit "Continue to Rewards" %>
  <% end %>
</div>
